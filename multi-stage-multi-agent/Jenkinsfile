pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Check out the code from the repository
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Use Maven to build the project
                sh 'mvn clean package'
            }
        }

        stage('Execute') {
            steps {
                // Use Maven to run the HelloWorld application
                sh 'mvn exec:java -Dexec.mainClass="com.vishnu.HelloWorld"'
            }
        }
    }

    post {
        success {
            echo 'Build and execution successful!'
        }
        failure {
            echo 'Build or execution failed.'
        }
    }
}
